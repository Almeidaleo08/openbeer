{% extends "_user_base.html.j2" %}
{% block base %}
  {{ super() }}
{% endblock base %}

{% block body %}
  <h4 class="ui header">Cervejas</h4>
  <div class="ui divider"></div>
    <div class="ui five column grid glass">
      {% for beer in beers %}
      <div class="column" style="margin: 0.5em;">
        <div class="ui card">
          <div class="image">
            {% if beer.image %}
            <img src="static/images/{{ beer.image }}">
            {% endif %}
          </div>
          <div class="content">
            <a class="header">{{ beer.name }}</a>
            <div class="meta">
              <span class="date">{{ beer.type }}</span>
            </div>
            <div class="description">
              {{ beer.description }}
            </div>
          </div>
          <div class="extra content">
            R${{ beer.value }}
          </div>
          <button type="button" name="button" class="ui teal button">+ carrinho</button>
        </div>
      </div>
      {% endfor %}
    </div>
